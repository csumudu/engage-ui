{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "checkJs": false,
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "declaration": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2015.promise",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "outDir": "./types"
  },
  "include": [
    "./config/typescript/**/*",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./docs/**/*.ts",
    "./docs/**/*.tsx",
    "./typings/*"
  ],
  "exclude": [
    "./@types",
    "**/*.js",
    "**/*.jsx"
  ]
}
